<div class="user_authentication_form">

<h1>Login!</h1>

<%= form_tag '/login' do%>

<div class="user_form">
  <%= text_field_tag :email, nil, placeholder: 'Email' %>
  <%= password_field_tag :password, nil, placeholder: 'Password' %>
  <%= submit_tag "Submit", class: "submit-button" %>
</div>

<% end %>

</div>